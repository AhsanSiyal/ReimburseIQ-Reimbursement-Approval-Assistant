{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReimbursementClaim",
  "type": "object",
  "required": ["claim_id", "submission_date", "currency", "employee", "lines"],
  "properties": {
    "claim_id": { "type": "string" },
    "submission_date": { "type": "string", "format": "date" },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },

    "employee": {
      "type": "object",
      "required": ["employee_id", "name", "email", "department", "manager_id", "country"],
      "properties": {
        "employee_id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "department": { "type": "string" },
        "manager_id": { "type": "string" },
        "grade": { "type": "string" },
        "country": { "type": "string" },
        "cost_center": { "type": "string" },
        "project_code": { "type": "string" }
      }
    },

    "trip": {
      "type": "object",
      "properties": {
        "trip_id": { "type": "string" },
        "business_purpose": { "type": "string" },
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" },
        "destination_city": { "type": "string" },
        "destination_country": { "type": "string" }
      }
    },

    "lines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["line_id", "date", "category", "amount", "currency", "vendor", "description"],
        "properties": {
          "line_id": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "category": {
            "type": "string",
            "enum": [
              "MEALS", "LODGING", "AIRFARE", "RAIL", "TAXI", "PUBLIC_TRANSIT",
              "MILEAGE", "CLIENT_ENTERTAINMENT", "OFFICE", "TRAINING", "OTHER"
            ]
          },
          "amount": { "type": "number", "minimum": 0 },
          "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
          "vendor": { "type": "string" },
          "description": { "type": "string" },

          "meal_type": { "type": "string", "enum": ["BREAKFAST", "LUNCH", "DINNER", "OTHER"] },

          "attendees": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "company": { "type": "string" },
                "type": { "type": "string", "enum": ["EMPLOYEE", "EXTERNAL"] }
              }
            }
          },

          "mileage": {
            "type": "object",
            "properties": {
              "km": { "type": "number", "minimum": 0 },
              "start_location": { "type": "string" },
              "end_location": { "type": "string" }
            }
          },

          "receipt": {
            "type": "object",
            "properties": {
              "provided": { "type": "boolean" },
              "receipt_id": { "type": "string" },
              "file_name": { "type": "string" },
              "mime_type": { "type": "string" }
            }
          },

          "preapproval": {
            "type": "object",
            "properties": {
              "provided": { "type": "boolean" },
              "reference": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
